<!DOCTYPE html>
<html>
    <head>
        <title>Welcome</title>
        <link rel="stylesheet" href="/app.css">
    </head>
<body>
    <h1>Sport List</h1>
    
    <table>
        <thead>
            <tr> 
                <th>Equipment Name</th>
                <th>Quantity</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
             <% sports.forEach(function(sport){ %>
                <tr>
                    <td><%= sport.name %></td>
                    <td><%= sport.quantity %></td>
                    <td><%= sport.description %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
